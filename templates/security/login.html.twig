{% extends 'base.html.twig' %}

{% block title %}connexion{% endblock %}

{% block body %}
<section class="container login">
    <div class="row">
        <div class="col">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div>
    {% include("emails/_activeCompte.html.twig") %}
</div>
    {% if app.user %}
        <div class="mb-3">
            vous êtes connecté comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me deconnecter</a>
        </div>
    {% endif %}
            <h1 class="h3 mb-3 font-weight-normal">CONNEXION</h1>
            <label for="inputName">votre nom</label>
            <input type="text" value="{{ last_username }}" name="name" id="inputName" class="form-control" autocomplete="name" required autofocus>
            <label for="inputPassword">mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="btn btn-lg btnLogin" type="submit"> Me Connecter </button>
            <p>Pas encore de compte ?<a href="{{ path('app_register')}}"> Inscription </a></p>
            <p>Vous avez<a href="{{ path('forgotten_password')}}"> oublié votre mot de passe</a> ? </p>
        </div>
    </div>
<section>
</form>
{% endblock %}
