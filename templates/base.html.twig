<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ammar | site_communautaire{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <!-- style sheets -->
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}" />

        <!-- file JS -->
        <script src="{{asset('assets/js/bootstrap.bundle.min.js')}}" defer></script>
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% include("header/index.html.twig") %}
        {% if app.user and app.user.isVerified == false %}
        <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            <div class="allert-message">
            <strong> votre compte n'est pas activé</strong>, <a href="{{ path('resend_verif') }}">renvoyer le lien d'activation</a>
            </div>
        </div>
        {% endif %}
        {% include("header/__flash.html.twig") %}
        {% block body %}{% endblock %}
    </body>
</html>
